@page "/registration"

<PageTitle>Registration</PageTitle>

@using Authorization.Data

@{
    <h2>Create a new account</h2>  
  
    <div>  
        <div>  
            <form>  
                <div class="form-group">  
                    <div class="row">  
                        <div class="col-4">  
                            <label>Name</label>  
                        </div>  
                        <div class="col-8">  
                            <input asp-for="Input.Name" class="form-control" id="nameText"/>  
                        </div>  
                        <span asp-validation-for="Input.Name" class="text-danger"></span>  
                    </div>  
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-4">
                            <label>Surname</label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.Surname" class="form-control" id="surnameText"/>
                        </div>
                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-4">
                            <label>Login</label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.Login" class="form-control" id="loginText"/>
                        </div>
                        <span asp-validation-for="Input.Login" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">  
                    <div class="row">  
                        <div class="col-4">  
                            <label>Email</label>  
                        </div>  
                        <div class="col-8">  
                            <input asp-for="Input.Email" class="form-control" id="emailText"/>  
                        </div>  
                        <span asp-validation-for="Input.Email" class="text-danger"></span>  
                    </div>  
                </div>  
      
                
                <div class="form-group">  
                    <div class="row">  
                        <div class="col-4">  
                            <label>Password</label>  
                        </div>  
                        <div class="col-8">
                            <input type ="text" asp-for="Input.Password" class="form-control" id="passwordText" runat=server/>
                        </div>  
                        <span asp-validation-for="Input.Password" class="text-danger" id="passwordText"></span>  
                    </div>  
                </div>  
      
                <div class="form-group">  
                    <div class="row">  
                        <div class="col-4">  
                            <label>Password Confirm</label>  
                        </div>  
                        <div class="col-8">  
                            <input asp-for="Input.ConfirmPassword" class="form-control" />  
                        </div>  
                        
                    </div>  
                </div>  
                                                          
                <div class="form-group">  
                    <div class="row">  
                        <div class="col-4">  
                        </div>  
                        <div class="col-8">  
                            <button type="submit" class="btn btn-success form-control" @onclick="registerButtonClick">Register</button>  
                        </div>  
                    </div>  
                </div>  
            </form>  
        </div>    
    </div>  
}

@code{
    protected void registerButtonClick()
    {
        DataBase database = new DataBase();
        User user = new User();
        //user.password = passwordText.Value;
        database.AddToDataBase(user);
    }
}